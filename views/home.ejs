<%- include('partials/header') -%>
<%- include('partials/search') -%>
<h1>Home</h1>

<p><%= homeContent %></p>

<% blogs.forEach(function(blog){ %>
  <h2><%= blog.title %></h2>
  <% if (blog.content.length > 100) { %>  
    <p><%= blog.content.substring(0, 100) + '...' %><a href='/posts/<%= blog.title %>' '>Read More</a></p>
    
  <% } else { %> 
    <p><%= blog.content %></p>
  <% } %>
<% }) %>  

<%- include('partials/footer') -%>

